{
    "name": "substancephp/http",
    "description": "An HTTP request handling library for modern PHP",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "SubstancePHP\\HTTP\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SubstancePHP\\HTTP\\": "src/",
            "Test\\": "test",
            "TestUtil\\": "testutil"
        }
    },
    "authors": [
        {
            "name": "Matthew Harvey",
            "email": "software@matthewharvey.net"
        }
    ],
    "keywords": [
      "HTTP",
      "router"
    ],
    "homepage": "https://github.com/substancephp/http",
    "require": {
        "php": ">=8.3",
        "ext-xdebug": "*",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.11"
    },
    "minimum-stability": "stable",
    "scripts": {
        "check": ["@stan", "@test"],
        "stan": "vendor/bin/phpstan analyse --level=7 src test",
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit --coverage-text test",
        "serve-coverage-report": "php -S localhost:3000 -t html-coverage"
    },
    "scripts-descriptions": {
      "check": "Run all tests and code quality checks",
      "stan": "Run static analysis check",
      "test": "Run the tests",
      "serve-coverage-report": "Serve HTML displaying test coverage results"
    },
    "support": {
        "issues": "https://github.com/substancephp/http/issues",
        "source": "https://github.com/substancephp/http"
    }
}
